<div class="container-fluid">
  <div class="row first-row">
    <div class="col-lg-12">
      <% if ( messages.error ) { %>
        <div class="alert alert-danger alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">×</span>
            <span class="sr-only">Close</span>
          </button>
          <p>
            <%= messages.error %>
          </p>
        </div>
      <% } %>
      <% if ( messages.info ) { %>
        <div class="alert alert-info alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">×</span>
            <span class="sr-only">Close</span>
          </button>
          <p>
            <%= messages.info %>
          </p>
        </div>
      <% } %>
      <% if ( messages.success ) { %>
        <div class="alert alert-success alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">×</span>
            <span class="sr-only">Close</span>
          </button>
          <p>
            <%= messages.success %>
          </p>
        </div>
      <% } %>
    </div>
    <div class="col-lg-12">
      <div class="form-container container">
        <div class="register" style="max-width: 500px; margin: 0 auto;">
          <form action="" method="post" accept-charset="utf-8">
            <label for="password">New Password</label>
            <input type="password" name="password" placeholder="New password" autofocus="true" required>
            <label for="confirm">Confirm Password</label>
            <input type="password" name="confirm" placeholder="Confirm password" required>
            <input type="submit" class="btnsubmit light" name="password_update" value="Update Password">
          </form>
        </div>
      </div>
    </div>
  </div>

</div>