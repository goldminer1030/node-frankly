<div class="container-fluid">
  <div class="row first-row">
    <div class="col-lg-12">
      <h1 class="light main-title">Log in and know the truth</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <h4 class="light sub-title">
        <span>directly</span>
      </h4>
      <a href="/auth/facebook"
        class="social social-fb">
        <i class="icon ion-social-facebook"></i> Via Facebook</a>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 form-box">
      <h4 class="light sub-title">
        <span>Or by entering your data</span>
      </h4>
      <% if ( error.length > 0 ) { %>
        <div class="col-md-12">
          <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert">
              <span aria-hidden="true">Ã—</span>
              <span class="sr-only">Close</span>
            </button>
            <p>
              <%= error %>
            </p>
          </div>
        </div>
      <% } %>
      <div class="form-container container">
        <div class="row">
          <div class="register">
            <form action="/login" method="post" accept-charset="utf-8">
              <label for="email">E-mail</label>
              <input type="text" id="email" name="email" required="" placeholder="Enter your email address">
              <label for="password">password</label>
              <input type="password" id="password" name="password" placeholder="Enter your password">
              <div class="col-md-6 col-xs-12 pull-right">
                <input type="submit" class="btnsubmit light" name="submitform" value="Login">
              </div>
              <div class="hidden-lg hidden-md hidden-sm col-xs-12">
                <a href="/forgot" class="forgot-xs light">Forgot the password? Press here</a>
              </div>
              <div class="col-md-6 col-xs-12 " style="margin-bottom: 80px;">
                <a href="/register" class="btnsubmit light" style="display: block; padding: 10px; width: 95%; background: #1E755A; margin: 25px auto 0px;">Create a new account</a>
              </div>
            </form>
          </div>
          <div class="row hidden-xs">
            <a href="/forgot" class="forgot light">Forgot the password? Press here</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>